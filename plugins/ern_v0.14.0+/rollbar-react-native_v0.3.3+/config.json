{
  "android": {
    "root": "",
    "moduleName": "android",
    "dependencies": [
      "com.rollbar:rollbar-api:1.2.0",
      "com.rollbar:rollbar-java:1.2.0",
      "com.rollbar:rollbar-android:1.2.0@aar"
    ]
  },
  "ios": {
    "copy": [
      {
        "source": "ios/RollbarReactNative.*",
        "dest": "{{{projectName}}}/Libraries/RollbarReactNative"
      },
      {
        "source": "ios/rollbar-ios/Rollbar*",
        "dest": "{{{projectName}}}/Libraries/RollbarReactNative/rollbar-ios"
      },
      {
        "source": "ios/rollbar-ios/KSCrash/iOS*",
        "dest": "{{{projectName}}}/Libraries/RollbarReactNative/rollbar-ios/KSCrash"
      }
    ],
    "pbxproj": {
      "addProject": [
        {
          "path": "RollbarReactNative/RollbarReactNative.xcodeproj",
          "group": "Libraries",
          "staticLibs": [
            { "name": "libRollbar.a", "target": "RollbarReactNative" }
          ]
        }
      ],
      "addHeaderSearchPath": [
        "\"$(SRCROOT)/{{{projectName}}}/Libraries/RollbarReactNative/**\""
      ]
    }
  }
}
